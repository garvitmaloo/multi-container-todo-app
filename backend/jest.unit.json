{
  "testMatch": ["**/?(*.)+(test).ts"],
  "preset": "ts-jest",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "testEnvironment": "node"
}
